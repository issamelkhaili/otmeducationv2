<!-- CTA Section -->
<section class="section bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-6" data-aos="fade-up">
            Prêt à commencer votre aventure ?
        </h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="200">
            Contactez-nous dès aujourd'hui pour discuter de votre projet d'éducation internationale.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center" data-aos="fade-up" data-aos-delay="400">
            <a href="/inscription" class="btn btn-accent text-lg px-8 py-4">
                Inscription gratuite
            </a>
            <a href="tel:+33123456789" class="btn btn-outline text-lg px-8 py-4 border-white text-white hover:bg-white hover:text-primary">
                <i class="fas fa-phone mr-2"></i>
                Nous appeler
            </a>
        </div>
    </div>
</section>

