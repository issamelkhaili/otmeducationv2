<!-- FAQ Page Specific Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle FAQ page chatbot trigger
    const faqTrigger = document.getElementById('chatbot-trigger-faq');
    if (faqTrigger) {
        faqTrigger.addEventListener('click', function() {
            // Trigger the main chatbot
            const mainTrigger = document.getElementById('chatbot-trigger');
            if (mainTrigger) {
                mainTrigger.click();
            }
        });
    }

    // Auto-close FAQ items when another one is opened
    const faqItems = document.querySelectorAll('.faq-item-enhanced');
    
    faqItems.forEach(item => {
        item.addEventListener('toggle', function() {
            if (this.open) {
                // Close all other FAQ items
                faqItems.forEach(otherItem => {
                    if (otherItem !== this && otherItem.open) {
                        otherItem.open = false;
                    }
                });
            }
        });
    });
});
</script>

